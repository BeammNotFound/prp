<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapper.BasesMapper">

    <select id="queryBases" resultType="com.pojo.Bases">
      select *
      from bases
    </select>

    <select id="fuzzyQueryBases" resultType="com.pojo.Bases" parameterType="com.pojo.vo.QueryBasesVo">
        select *
        from bases
        where 1=1
        <if test="b_name != null and b_name != ''">
            and b_name like CONCAT('%',#{b_name},'%')
        </if>
    </select>

    <delete id="delBases" parameterType="com.pojo.vo.DelBasesVo">
        delete
		from bases
		where b_id = #{b_id}
    </delete>

    <select id="queryBasesById" resultType="com.pojo.Bases" parameterType="Integer">
        select *
        from bases
        where b_id = #{b_id}
    </select>

    <select id="queryAPList" resultType="com.pojo.AdoptionPets" parameterType="Integer">
        select *
        from adoption_pets
        where ap_base = #{ap_base}
    </select>

    <select id="queryBaseMessages" resultType="com.pojo.BaseMessages" parameterType="Integer">
        select *
        from base_messages
        where bm_base_id = #{bm_base_id}
    </select>






    <select id="queryBasesImagesById" resultType="com.pojo.BasesImages" parameterType="java.lang.Integer">
        select *
        from bases_images
        where bi_base = #{bi_base}
    </select>



</mapper>